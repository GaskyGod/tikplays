{
  "name": "tikplays",
  "version": "2.0.11",
  "description": "App de Webhooks para TikTok Live con overlays y Electron.",
  "author": "GaskyGod",
  "main": "electron/main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.1.8",
    "express": "^4.19.2",
    "firebase-admin": "^12.7.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-machine-id": "^1.1.12",
    "qs": "^6.14.0",
    "say": "0.16.0",
    "socket.io": "^4.7.5",
    "tiktok-live-connector": "^1.2.3"
  },
  "devDependencies": {
    "electron": "29.4.0",
    "electron-builder": "24.13.3",
    "electron-updater": "^6.1.8"
  },
  "build": {
    "appId": "com.gaskygod.tikplays",
    "productName": "Tikplays",
    "directories": {
      "output": "dist"
    },
    "files": [
      "public/**",
      "electron/**",
      "server.js",
      "firebase-admin.js",
      "goals.json",
      "giftCatalog.json",
      "topGift.json",
      "webhooks.json",
      "**/*",
      "!dist",
      "!node_modules/.cache",
      "!**/*.map"
    ],
    "asar": true,
    "npmRebuild": true,
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "GaskyGod",
        "repo": "tikplays",
        "releaseType": "release"
      }
    ]
  }
}
